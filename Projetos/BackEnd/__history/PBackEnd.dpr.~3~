program PBackEnd;

{$APPTYPE CONSOLE}

{$R *.res}

uses
  System.SysUtils,
  Horse;

begin
  THorse.Get('/ping',
    procedure(Req: THorseRequest; Res: THorseResponse)
    begin
      Res.Send('pong');
    end);

  THorse.Listen(9000,
    procedure(Horse : THorse)
    begin
      Writeln('Servidor ToDoList na escuta, Host/Porta: '+Horse.Host+'/'+Horse.Port);
    end);
end.
